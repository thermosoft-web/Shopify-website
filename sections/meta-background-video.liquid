{%- liquid
  assign desktop_height = section.settings.desktop_height
  assign mobile_height = section.settings.mobile_height
  assign full_width = section.settings.full_width
  assign fallback_image = section.settings.fallback_image
  assign overlay_color = section.settings.overlay_color
  assign overlay_opacity = section.settings.overlay_opacity
  assign video = section.settings.video
  assign video_hosted = section.settings.video_hosted
  assign video_controls = section.settings.video_controls
  assign disable_top_spacing = section.settings.disable_top_spacing
  assign disable_bottom_spacing = section.settings.disable_bottom_spacing
  assign desktop_spacing_top = section.settings.desktop_spacing_top
	assign desktop_spacing_bottom = section.settings.desktop_spacing_bottom
	assign mobile_spacing_top = section.settings.mobile_spacing_top
	assign mobile_spacing_bottom = section.settings.mobile_spacing_bottom
  if video_hosted == blank
    assign video_type = video.type
  else
    assign video_type = 'hosted'
  endif
-%}
{% style %}
	#shopify-section-{{ section.id }} {
		--section-spacing-mobile-top: {{ mobile_spacing_top | default: '15' | append: 'px' }};
		--section-spacing-mobile-bottom: {{ mobile_spacing_bottom | default: '15' | append: 'px' }};
		--section-spacing-desktop-top: {{ desktop_spacing_top | default: '30' | append: 'px' }};
		--section-spacing-desktop-bottom: {{ desktop_spacing_bottom | default: '30' | append: 'px' }};
	}
{% endstyle %}
{% assign background_video_metaobject = page.metafields.custom.background_video.value %}

{% if background_video_metaobject != blank %}
  {% assign video = background_video_metaobject.video %}
  {% assign youtube_id = video | replace: 'https://youtu.be/', '' | replace: 'https://www.youtube.com/watch?v=', '' | split: '?' | first  %}
  {% assign fallback_image = background_video_metaobject.fallback_image %}
  {% assign subheading = background_video_metaobject.subheading %}
  {% assign heading = background_video_metaobject.heading %}
  {% assign text = background_video_metaobject.text %}

<div class="row {% if full_width %}full-width-row-full{% endif %}">
  <div class="small-12 columns">
    <background-video class="background-video background-video--full-width-{{ full_width }} {{ mobile_height }} {{ desktop_height }} section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}">
      {%- if fallback_image != blank -%}
        <div class="background-video__fallback-img fallback-img-wrap">
          <img
            data-src="{{ fallback_image | image_url }}"
            alt="{{ fallback_image.alt | escape }}"
            width="{{ fallback_image.width }}"
            height="{{ fallback_image.height }}"
            class="lazyload{% unless settings.lazy_loading %} no-blur{% endunless %}"
          >
          <noscript>
            <img
              src="{{ fallback_image | image_url }}"
              alt="{{ fallback_image.alt | escape }}"
              width="{{ fallback_image.width }}"
              height="{{ fallback_image.height }}"
            >
          </noscript>
        </div>
      {%- endif -%}
      <div class="background-video__iframe" data-provider="{{ video_type }}">
        {%- if video_hosted == blank -%}
          {%- if youtube_id != blank -%}
              <iframe
                id="myVideo"
                src="https://www.youtube.com/embed/{{ youtube_id }}?enablejsapi=1&mute=0&controls=0&playsinline=1"
                frameborder="0"
                allow="autoplay"
              ></iframe>
          {%- endif -%}
        {%- else -%}
          {{ video_hosted | video_tag: autoplay: true, loop: true, controls: false, muted: true }}
        {%- endif -%}
      </div>
      <div
        class="background-video__overlay active"
        style="--overlay-color-rgb: {{ overlay_color.rgb | replace: " ", "," }}; --overlay-opacity: {{ overlay_opacity | divided_by: 100.00 }}"
      ></div>
      <div class="background-video__content-wrap active">
        <div class="background-video__content">
              {% if subheading != blank %}  <p class="subheading">{{ subheading }}</p>{% endif %}
              {% if heading != blank %}  <h3 class="">
                  {{ heading }}
                </h3>{% endif %}
                <div class="rte" >
                  {{ text | metafield_tag }}
                </div>
        </div>
      </div>
      <div class="btn_link">
        {% if section.settings.link_label_0 != blank %}
							<a class="button accent large"{% if section.settings.link_label_0 == blank %} aria-disabled="true"{% else %} href="{{ section.settings.link_0 }}"{% endif %} {{ section.shopify_attributes }}>{{ section.settings.link_label_0 }}</a>
						{% endif %}
        {% if section.settings.link_label_1 != blank %}
							<a class="button accent large"{% if section.settings.link_label_1 == blank %} aria-disabled="true"{% else %} href="{{ section.settings.link_1 }}"{% endif %} {{ section.shopify_attributes }}>{{ section.settings.link_label_1 }}</a>
						{% endif %}
      </div>
     {%- if youtube_id != blank -%}
        <div class="background-video__controls">
          <button id="playBtn" type="button" class="paused">
            <span class="background-video__controls-play">{% render 'svg-icons' with 'thb-video-play' %}</span>
            <span class="background-video__controls-pause">{% render 'svg-icons' with 'thb-video-pause' %}</span>
          </button>
        </div>
      {%- endif -%}
    </background-video>
  </div>
</div>
{% endif %}
{{- 'background-video.css' | asset_url | stylesheet_tag -}}
<script src="{{ 'background-video.js' | asset_url }}" defer="defer"></script>
<script>
var playBtn = document.getElementById('playBtn');

if (playBtn) {
  playBtn.onclick = function () {
    let p = new YT.Player("myVideo");
    p.unMute();
    p.playVideo();
  };
}


</script>
