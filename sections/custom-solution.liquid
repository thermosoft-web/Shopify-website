				"default": "<p>Add a short description for this section</p>"
			},
      {
        "type": "select",
        "id": "body-bottom-size",
        "label": "Bottom Size",
        "options": [
              {
          "value": "body-large",
          "label": "Large"
        },
        {
          "value": "body-regular",
          "label": "Medium"
        },
        {
          "value": "body-small",
          "label": "Small"
        },
        {
          "value": "body-extra-small",
          "label": "XSmall"
        }
        ],
