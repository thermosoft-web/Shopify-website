      ]
    },
    {
      "type": "radio_field",
      "name": "Radio field",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Name",
          "default": "Custom field"
        },
        {
          "type": "text",
          "id": "values",
          "label": "Values",
          "info": "Separate each value by a comma.",
          "default": "value 1, value 2, value 3"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sign-up form",
      "blocks": [
        
      ]
    }
  ],
	"enabled_on": {
		"templates": ["*"],
		"groups": [
			"header", "footer"
		]
	}
}
{% endschema %}
