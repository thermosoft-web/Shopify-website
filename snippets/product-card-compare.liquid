{%- if template.name contains 'collection' or template.name contains 'search' -%}
<div class="product-card-compare">
  <input type="checkbox" class="checkbox product-card-compare--checkbox" id="compare-{{ product_card_product.id }}" data-product-id="{{ product_card_product.id }}" data-product-url="{%if search %}{{ product_card_product.url | split: '?' | first }}{% else %}{{ product_card_product.url }}{% endif %}" data-product-handle="{{ product_card_product.handle }}">
  <span>Compare</span>
  {% comment %} <label for="compare-{{ product_card_product.id }}"><span class="product-card-compare-text">Compare</span></label> {% endcomment %}
</div>
{%- endif -%}