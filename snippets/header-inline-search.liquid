<search-form class="searchform">
  <form role="search" method="get" action="{{ routes.search_url }}">
    <fieldset class="searchform--form">
      <label for="header-search-input" class="visually-hidden">{{ 'sections.header.search_for' | t }}</label>
      
      <input
        id="header-search-input"
        type="search"
        class="search-field"
        placeholder="What are you looking for?"
        value="{{ search.terms | replace: '*', '' }}"
        name="q"
        autocorrect="off"
        autocomplete="off"
        autocapitalize="off"
        spellcheck="false"
      >
      <button type="submit" class="thb-search-submit" aria-label="{{ 'sections.header.search' | t }}">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
        <g clip-path="url(#clip0_10758_13335)">
