        </g>
        <defs>
          <clipPath id="clip0_10758_13335">
            <rect width="20" height="20" fill="white"/>
          </clipPath>
        </defs>
      </svg>
      </button>
    <div class="thb-predictive-search" inert>
      <span class="loading-overlay">
        {%- render 'svg-icons' with 'thb-loading' -%}
      </span>
    </div>
    </fieldset>
    <div class="searchform--click-capture"></div>
  </form>
</search-form>